# ===========================================
# SUPABASE MODE CONFIGURATION
# ===========================================
# Set the mode: 'local' for full local stack, 'cloud' for cloud Supabase
SUPABASE_MODE=local

# ===========================================
# LOCAL SUPABASE CONFIGURATION
# ===========================================
# Used when SUPABASE_MODE=local
SUPABASE_LOCAL_URL=http://localhost/rest
SUPABASE_LOCAL_ANON_KEY=your-local-supabase-anon-key
SUPABASE_LOCAL_SERVICE_KEY=your-local-supabase-service-key

# ===========================================
# CLOUD SUPABASE CONFIGURATION  
# ===========================================
# Used when SUPABASE_MODE=cloud
SUPABASE_CLOUD_URL=https://your-project.supabase.co
SUPABASE_CLOUD_ANON_KEY=your-cloud-supabase-anon-key
SUPABASE_CLOUD_SERVICE_KEY=your-cloud-supabase-service-key

# ===========================================
# DOMAIN CONFIGURATION (Production)
# ===========================================
DOMAIN=your-domain.com
ACME_EMAIL=admin@your-domain.com

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-super-secure-password

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Will be auto-generated if not set or weak
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# ===========================================
# BACKWARDS COMPATIBILITY
# ===========================================
# These are used for backwards compatibility and will be deprecated
SUPABASE_URL=${SUPABASE_MODE=local?$SUPABASE_LOCAL_URL:$SUPABASE_CLOUD_URL}
SUPABASE_ANON_KEY=${SUPABASE_MODE=local?$SUPABASE_LOCAL_ANON_KEY:$SUPABASE_CLOUD_ANON_KEY}
SUPABASE_SERVICE_KEY=${SUPABASE_MODE=local?$SUPABASE_LOCAL_SERVICE_KEY:$SUPABASE_CLOUD_SERVICE_KEY}

# ===========================================
# ORGANIZATION CONFIGURATION
# ===========================================
ORGANIZATION_NAME="Church Management System"
PROJECT_NAME="Church Financial App"

# ===========================================
# SMTP CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_ADMIN_EMAIL=admin@your-domain.com

# ===========================================
# DEVELOPMENT OVERRIDES
# ===========================================
# Uncomment these for quick development setup
# POSTGRES_PASSWORD=postgres
# JWT_SECRET=dev-jwt-secret-key-32-characters-long